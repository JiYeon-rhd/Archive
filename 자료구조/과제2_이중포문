#include <stdio.h> 
#define STUDENT 10 //«–ª˝ºˆ ¿‘∑¬
#define SUBJECT 3 //∞˙∏Òºˆ ¿‘∑¬
#define NAME_LEN 5 //∞˙∏Ò¿Ã∏ß¿« √÷¥Î ±Ê¿Ã
int main(void)
{
	int score[SUBJECT][STUDENT] = { {90, 100, 95, 60, 70, 50, 20, 100, 98, 100},{75, 60, 88,67, 99,100,60,70,80,90},{70, 50, 80, 79, 85,89,78,67,90,88} }; //∞¢ «–ª˝¿« ±πæÓ,ºˆ«–,øµæÓ¡°ºˆ∏¶ ¬˜∑ ∑Œ ¿‘∑¬
	char class_name[SUBJECT][NAME_LEN] = { "±πæÓ","ºˆ«–","øµæÓ" };   //∞˙∏Ò∏Ìµµ πËø≠∑Œ ∏∏µÈæÓ ∞˙∏Ò∫∞ ∆Ú±’¿ª ∞ËªÍ«“ ∂ß ªÁøÎ
	int student,subject, sum;
	float average;

	printf("«–ª˝¿∫ ∏Ó∏Ì¿‘¥œ±Ó? : ");
	scanf_s("%d", &student);
	printf("∏Ó∞≥¿« ∞˙∏Ò¿Ã ¿÷Ω¿¥œ±Ó? : ");
	scanf_s("%d", &subject);


	//∞¢ «–ª˝¿« ∞˙∏Ò∫∞ ¡°ºˆøÕ ∞≥¿Œ∫∞ ∆Ú±’ 
	for (student = 0; student < STUDENT; student++)   
	{
		printf("%dπ¯¬∞ «–ª˝¿« º∫¿˚¿ª ¿‘∑¬«œººø‰\n", student + 1);
		sum = 0;  //«’∞Ë∏¶ 0¿∏∑Œ √ ±‚»≠«‘
		for (subject = 0; subject < SUBJECT; subject++)
		{
			printf("%s¡°ºˆ = %d\n", class_name[subject], score[subject][student]);   //∞¢ «–ª˝¿« ∞˙∏Ò∫∞ ¡°ºˆ √‚∑¬
			sum += score[subject][student];       //∞≥¿Œ∫∞ √—¡°¿ª ∞ËªÍ                                  
		}

		printf("∆Ú±’ = %.1f\n", (float)(sum) / SUBJECT);  //∞≥¿Œ∫∞ ∆Ú±’ ∞ËªÍ
		printf("\n");
	}

	//∞˙∏Ò∫∞ ∆Ú±’¡°ºˆ
	printf("∞˙∏Ò∫∞ ∆Ú±’ ¡°ºˆ\n");
	for (subject = 0; subject < SUBJECT; subject++)
	{
		printf("[%s] : ", class_name[subject]);
		sum = 0;  //«’∞Ë∏¶ 0¿∏∑Œ √ ±‚»≠«‘
		for (student = 0; student < STUDENT; student++)
		{
			sum += score[subject][student];   //∞¢ ∞˙∏Ò∫∞ √—¡° ∞ËªÍ
		}

		printf("%.1f\n", (float)(sum) / STUDENT);  //∞˙∏Ò∫∞ ∆Ú±’∞ËªÍ
	}


}
