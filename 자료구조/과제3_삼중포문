#include <iostream>
using namespace std;

#define STUDENT 10 //«–ª˝ºˆ ¿‘∑¬
#define SUBJECT 3 //∞˙∏Òºˆ ¿‘∑¬
#define CLASS 3 //π›ºˆ ¿‘∑¬
#define NAME_LEN 5 //∞˙∏Ò¿Ã∏ß¿« √÷¥Î ±Ê¿Ã


void main()
{
	int score[CLASS][SUBJECT][STUDENT] = { 
		{{90, 100, 95, 60, 70, 50, 20, 100, 98, 100},{75, 60, 88,67, 99,100,60,70,80,90},{70, 50, 80, 79, 85,89,78,67,90,88}},
		{{99, 10, 85, 70, 60, 80, 88, 89, 99, 22},{35, 55, 68,87, 100,10,40,50,90,70},{66, 55, 60, 44, 55,99,100,100,98,58}},
		{{90, 100, 95, 60, 70, 50, 20, 100, 98, 100},{75, 60, 88,67, 99,100,60,70,80,90},{70, 50, 80, 79, 85,89,78,67,90,88}}
	}; //∞¢ «–ª˝¿« ±πæÓ,ºˆ«–,øµæÓ¡°ºˆ∏¶ ¬˜∑ ∑Œ ¿‘∑¬

	char class_name[SUBJECT][NAME_LEN] = { "±πæÓ","ºˆ«–","øµæÓ" };   //∞˙∏Ò∏Ìµµ πËø≠∑Œ ∏∏µÈæÓ ∞˙∏Ò∫∞ ∆Ú±’¿ª ∞ËªÍ«“ ∂ß ªÁøÎ
	
	int c,student, subject, total;
	float average;

	//1,2,3 π›¿« ∞˙∏Ò∫∞ ∆Ú±’
	printf("∞¢ π›¿« ∞˙∏Ò∫∞ ∆Ú±’\n");
	for (int c = 0; c < CLASS; c++) {
		for (int subject = 0; subject < SUBJECT; subject++) 
		{
			int total = 0;
			for (int student = 0; student < STUDENT; student++) 
			{
				total = total + score[c][subject][student];//∞¢ ∞˙∏Ò¿« √— «’±∏«œ±‚
			}
			float average = total / STUDENT;//∞¢ ∞˙∏Ò¿« ∆Ú±’∞ËªÍ
			cout << c + 1 << "π› " << class_name[subject]<< "¿« ∆Ú±’: " << average << endl;
		}
	}

	//∞˙∏Ò∫∞ ∆Ú±’
	printf("\n∞˙∏Ò∫∞ ∆Ú±’\n");
	for (int subject = 0; subject < SUBJECT; subject++)
	{
		int total = 0;//∞˙∏Ò∫∞ ¿¸√º «’
		for (int c = 0; c < CLASS; c++)
			for (int student = 0; student < STUDENT; student++) {
				total += score[c][subject][student];

			}
		float average = total / (CLASS * STUDENT);

		cout << class_name[subject] << "¿« ∆Ú±’: " << average << endl;
	}

}
