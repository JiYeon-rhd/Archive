#include <iostream>
using namespace std;

//¿Ã¡ﬂø¨∞·∏ÆΩ∫∆Æ + (ø¯«¸∏ÆΩ∫∆Æ+«ÏµÂ≥ÎµÂ_
class DNode {
public :
	int data;
	DNode* llink;
	DNode* rlink;
};

DNode* Head = NULL;

void insert_node(DNode *new_node) { //∏ÆΩ∫∆Æ µ⁄ø° ªı∑ŒøÓ ≥ÎµÂ √ﬂ∞°
	new_node->rlink = Head;
	new_node->llink = Head->llink;
	Head->llink->rlink = new_node;
	Head->llink = new_node;
}

void delete_node(int key) {
	DNode* removed = NULL; //key∞™¿ª ∞Æ¥¬ ∞Õ¿Ã æ¯¿ª ºˆµµ ¿÷æÓº≠

	for (DNode* list = Head->rlink; list != Head; list = list->rlink) 
		if (list->data == key) {
			list->llink->rlink = list->rlink;
			list->rlink->llink = list->llink;
			//list ¡ˆøˆπˆ∏≤
			return;
		}
}

void print_list() {
	cout << "∏ÆΩ∫∆Æ ≥ªøÎ √‚∑¬" << endl;
	//º¯πÊ«‚
	for (DNode* list = Head->rlink; list != Head; list = list->rlink) {
		cout << list->data << endl;
	}

	/*
	//ø™πÊ«‚
	for (DNode* list = Head->llink; list != Head; list = list->llink) {
		cout << list->data << endl;
	}
	*/
}

void main() {
	//«ÏµÂ≥ÎµÂ ª˝º∫
	Head = new DNode;
	Head->llink = Head;
	Head->rlink = Head; //¿⁄±‚¿⁄Ω≈ ∞°∏Æ≈∞±‚ (Head≥ÎµÂ)

	int num, data;

	cout << "¿‘∑¬«“ ≥ÎµÂ¿« ∞≥ºˆ¥¬? ";
	cin >> num;

	for (int i = 0; i < num; i++) {

		//≥ÎµÂ∞™ ¿‘∑¬
		cin >> data;

		DNode* new_node = new DNode;
		new_node->data = data;
		new_node->llink = NULL;
		new_node->rlink = NULL;

		//≥ÎµÂ∏¶ ∏ÆΩ∫∆Æø° √ﬂ∞°
		insert_node(new_node);
	}
	print_list();

	cout << "ªË¡¶«“ ∞™¿∫? ";
	cin >> data;

	delete_node(data);
	print_list();

}
